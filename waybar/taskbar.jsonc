{
  "layer": "top",
  "position": "top",
  "height": 35,
  "spacing": 8,

  "modules-left": [
    "hyprland/workspaces",
    "hyprland/window"
  ],

  "modules-center": [
    "clock",
    "custom/mako"
  ],

  "modules-right": [
    "cpu",
    "memory",
    "tray",
    "wireplumber",
    "backlight",
    "battery",
    "power-profiles-daemon"
  ],

  /* â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ LEFT â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */

  "hyprland/workspaces": {
    "format": "{name}",
    "on-click": "activate",
    "all-outputs": true,
    "persistent-workspaces": {
      "*": 1
    }
  },

  "hyprland/window": {
    "format": "{}",
    "max-length": 50,
    "separate-outputs": true,
    "tooltip": true,
    "rewrite": {
      "": ""
    }
  },

  /* â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ CENTER â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */

  "clock": {
    "interval": 60,
    "format": "{:%d-%b-%Y | %H:%M}",
    "tooltip-format": "<tt>{calendar}</tt>"
  },

  "custom/mako": {
    "exec": "makoctl list | jq 'length' || echo 0",
    "format": "ğŸ””",
    "tooltip": "Notification Manager",
    "on-click": "makoctl dismiss -a",
    "on-click-right": "makoctl mode -a do-not-disturb && notify-send 'DND: On'",
    "interval": 5
  },

  /* â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ RIGHT â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */

  "cpu": {
    "interval": 2,
    "format": "ï‹›  {usage}%",
    "tooltip": true
  },

  "memory": {
    "interval": 3,
    "format": "ï‹›  {used:0.1f}G",
    "tooltip-format": "RAM: {used:0.1f}G / {total:0.1f}G\nSwap: {swapUsed:0.1f}G / {swapTotal:0.1f}G"
  },

  "tray": {
    "spacing": 3,
    "padding": 3,
    "icon-size": 20,
    "show-passive-items": true
  },

  "wireplumber": {
    "format": "ï€¨  {volume}%",
    "format-muted": "ó°Ÿ  Muted",
    "on-click": "wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle",
    "on-click-right": "hyprpwcenter",
    "tooltip": true
  },

  "backlight": {
  "format": "ï”¢  {percent}%",
  "format-icons": ["ó°ƒ", "ó°ƒŸ", "ó°ƒ "],
  "tooltip": true,
  "on-click": "brightnessctl set 50%",
  "on-scroll-up": "brightnessctl set +5%",
  "on-scroll-down": "brightnessctl set 5%-",
  "min-brightness": 0.1,
  "scroll-step": 5
  },

  "battery": {
    "states": {
      "warning": 30,
      "critical": 10
    },
    "events": {
      "on-charging-100": "notify-send -t 0 -u normal 'Battery Full!!!' 'Remove your Charger!'",
      "on-discharging-warning": "notify-send -t 0 -u low 'Battery Low!!!' 'Plug-In your Charger!'",
		  "on-discharging-critical": "notify-send -t 0 -u critical 'Battery Critical!!!' 'Suspending Soon...'"
    },
    "format": "{icon} {capacity}%",
    "format-charging": "ó°‚„ {capacity}%",
    "format-plugged": "ó°š¥  {capacity}%",
    "format-icons": ["ó°‚", "ó°º", "ó°»", "ó°¼", "ó°½", "ó°¾", "ó°¿", "ó°‚€", "ó°‚", "ó°‚‚"],
    "tooltip-format": "Battery: {capacity}%\nTime: {time}\nPower: {power}W\nHealth: {health}%",
    "tooltip": true
  },

  "power-profiles-daemon": {
    "format": "{icon}",
    "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
    "tooltip": true,
    "format-icons": {
      "default": "ïƒ§",
      "performance": "ïƒ§",
      "balanced": "ï‰",
      "power-saver": "ï¬"
    }
  }

}
