{
  "layer": "top",
  "position": "top",
  "height": 34,
  "spacing": 8,

  "modules-left": [
    "hyprland/workspaces",
    "hyprland/window"
  ],

  "modules-center": [
    "custom/copyq",
    "clock",
    "custom/swaync"
  ],

  "modules-right": [
    "cpu",
    "memory",
    "nm-applet",
    "blueman-applet",
    "pulseaudio",
    "brightness",
    "group/battery",
    "custom/power-menu"
  ],

  /* â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ LEFT â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */

  "hyprland/workspaces": {
    "format": "{name}",
    "on-click": "activate",
    "all-outputs": true,
    "persistent-workspaces": {
      "*": ""
    }
  },

  "hyprland/window": {
    "format": "{}",
    "max-length": 50,
    "separate-outputs": true,
    "tooltip": true,
    "rewrite": {
      "": ""
    }
  },

  /* â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ CENTER â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */

  "custom/copyq": {
    "format": "ğŸ“‹",
    "tooltip": "CopyQ Clipboard Manager",
    "on-click": "copyq show",
    "on-click-right": "copyq toggle"
  },

  "clock": {
    "interval": 60,
    "format": "{:%d-%b-%Y | %H:%M}",
    "tooltip-format": "<big>{:%A}</big>\n<tt>{:%d %B %Y}</tt>\n{:%H:%M:%S}"
  },

  "custom/swaync": {
    "format": "ğŸ””",
    "tooltip": "Notification Manager",
    "on-click": "swaync-client -t",
    "on-click-right": "swaync-client -C"
  },

  /* â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ RIGHT â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */

  "cpu": {
    "interval": 2,
    "format": "ï‹› {usage}%",
    "tooltip": true
  },

  "memory": {
    "interval": 3,
    "format": "ï”¸ {used:0.1f}G",
    "tooltip-format": "RAM: {used:0.1f}G / {total:0.1f}G\nSwap: {swapUsed:0.1f}G / {swapTotal:0.1f}G"
  },

  "pulseaudio": {
    "format": "ï€¨ {volume}%",
    "format-muted": "ó°Ÿ Muted",
    "on-click": "pavucontrol",
    "tooltip": true
  },

  "brightness": {
  "format": "ï”¢ {percent}%",
  "format-icons": ["ó°ƒ", "ó°ƒŸ", "ó°ƒ "],
  "tooltip": true,
  "on-click": "brightnessctl set 50%",
  "on-scroll-up": "brightnessctl set +5%",
  "on-scroll-down": "brightnessctl set 5%-",
  "min-brightness": 0.1,
  "scroll-step": 5
  },

  "group/battery": {
    "orientation": "horizontal",
    "drawer": {
      "transition-duration": 300,
      "children-class": "not-primary",
      "transition-left-to-right": false
    },
    "modules": [
      "battery",
      "custom/power-profile"
    ]
  },

  "battery": {
    "states": {
      "warning": 30,
      "critical": 15
    },
    "format": "{icon} {capacity}%",
    "format-charging": "ó°‚„ {capacity}%",
    "format-plugged": "ó°š¥ {capacity}%",
    "format-icons": ["ó°‚", "ó°º", "ó°»", "ó°¼", "ó°½", "ó°¾", "ó°¿", "ó°‚€", "ó°‚", "ó°‚‚"],
    "tooltip-format": "Battery: {capacity}%\nTime: {time}",
    "tooltip": true,
    "on-click": "~/.config/waybar/scripts/power_profile_menu.sh",
    "on-click-right": "~/.config/waybar/scripts/battery_info.sh"
  },

  "custom/power-profile": {
    "format": "âš¡",
    "tooltip": "Power Profile",
    "on-click": "~/.config/waybar/scripts/power_profile_menu.sh"
  },

  "custom/power-menu": {
    "format": "â»",
    "tooltip": "Power Menu (Lock | Sleep | Suspend | Reboot | Shutdown)",
    "on-click": "~/.config/waybar/scripts/power_menu_dropdown.sh",
    "on-click-right": "hyprlock"
  }
}
